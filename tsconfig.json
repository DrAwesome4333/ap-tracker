{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@external/*" : ["./external/"]
        },
        "baseUrl": ".",
        "composite": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "incremental": true,
        "module": "esnext"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "build/types/**/*.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
